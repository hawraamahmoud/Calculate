<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CalculatorButton">
        <item name="android:textSize">@dimen/textButton</item>
    </style>
    <style name="CalculatorButton.Result">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="number">
        <item name="android:textSize">@dimen/textButton</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CalculatorButton.number">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CalculatorButton.zero">
        <item name="android:background">@drawable/rounded_button_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CalculatorButton.del">
        <item name="android:background">@drawable/delete_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text">
        <item name="android:textSize">@dimen/sizetext</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>